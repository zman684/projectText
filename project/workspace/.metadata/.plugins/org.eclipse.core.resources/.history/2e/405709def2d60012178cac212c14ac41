package firstproject;

import java.util.Scanner;

public class first {
	private String name;
	private int age;
	private String grade;
	private String[] pets = new String[2];
	private char gender;
	private String race;
	private int[] favNums = new int[1];

	public first(){
		name = "Ally Taylor";
		age = 16;
		grade = "Junior";
		pets[0] = "Simon";
		pets[1] = "Grace";
		gender = 'f';
		race = "white";
		favNums[0] = 5;
	}

	public static void menu(){
		Scanner in = new Scanner(System.in);
		System.out.println("What do you want to know about me?");
		System.out.println("Name");
		System.out.println("Age");
		System.out.println("Grade");
		System.out.println("Pets");
		System.out.println("Gender");
		System.out.println("Race");
		System.out.println("Favorite Number");
		System.out.print(":");
		String option = in.nextLine().toLowerCase();
		if (option.equals("name")){
			System.out.println(name);
		}

	}
}
