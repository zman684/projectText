package maps;

	import java.io.BufferedReader;
import java.text.DecimalFormat;

	public class Point {
		private double x;
		private double y;
		
		/**
		 * Constructs a point object using the specified parameters
		 * @param x x-coord
		 * @param y y-coord
		 */
		public Point(double x, double y){
			this.x = x;
			this.y = y;
		}

		public double getX() {
			return x;
		}
		public double getY() {
			return y;
		}
		
		public String toString(){
			//formats the coord with 2 decimal values
			DecimalFormat d = new DecimalFormat("0.00");
			
			return "(" + d.format(x) + ", " + d.format(y) + ")";
		}
		
		public static char[] read(String path) {
			BufferedReader file;
			char[] temp = new char[103];
			finalWord = new char[];
			int i = 0;
			try {
				file = new BufferedReader(new FileReader(path));
				String line;
				while ((line = file.readLine()) != null) {
					Letter l = new Letter(line);
					BufferedReader reader = new BufferedReader(new FileReader(path));
					temp[i++] = l;
					reader.close();
				}
				int[] temm = new int[word.length()];
				parse(word);
				temm = parse(word);
				
				for(int j = 0; j < word.length(); j++){
					int w = temm[j];
					finalWord[j] = temp[w];
				}
				//CLOSE!
				file.close();
			} catch (FileNotFoundException e) {
				System.err.println("File Not Found");
			} catch (IOException e) {
				System.err.println("Input exception");
			}
			return finalWord;
		}

	}

